<h1>🍔¡Eat Da Burger!🍔</h1>

<h2>Uneaten Burgers</h2>


 
<ul>
    {{!-- Add a button to this first group that interacrs with burgers.js to change state of burger --}}
  {{#each burgers}}
    {{#unless devoured}}
        <p>Burger: {{burger_name}}</p>
        <p>Devoured: {{devoured}}</p>
      {{!-- {{> burgers/burger-block devoured=true}} --}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
        <p>Burger: {{burger_name}}</p>
        <p>Devoured: {{devoured}}</p>
      {{!-- {{> burgers/burger-block devoured=false}} --}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>